{
  "name": "salt-lsp",
  "description": "Salt Language Server Protocol Server",
  "contributors": [
    {
      "name": "Cédric Bosdonnat"
    },
    {
      "name": "Dan Čermák"
    }
  ],
  "publisher": "dancermak",
  "repository": "https://github.com/dcermak/salt-lsp",
  "license": "Apache-2.0",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sls"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sls",
        "aliases": [
          "SaltStack",
          "salt",
          "pillar"
        ],
        "extensions": [
          ".sls"
        ]
      },
      {
        "id": "tst",
        "aliases": [
          "SaltStack",
          "salt",
          "saltcheck"
        ],
        "extensions": [
          ".tst"
        ]
      },
      {
        "id": "jinja",
        "aliases": [
          "j2",
          "jinja2"
        ],
        "extensions": [
          ".jinja",
          ".j2"
        ]
      }
    ]
  },
  "main": "./clients/vscode/out/extension",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --yarn"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/vscode": "^1",
    "@vscode/test-electron": "^1",
    "typescript": "^5",
    "vsce": "^2"
  },
  "dependencies": {
    "vscode-languageclient": "^8"
  }
}
